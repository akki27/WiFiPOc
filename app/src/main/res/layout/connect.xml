<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WiFiScannerActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/switch_padding_medium"
        android:paddingStart="@dimen/switch_padding_medium"
        android:paddingRight="@dimen/switch_padding_medium"
        android:paddingTop="@dimen/switch_padding_medium"/>

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autofillHints="pls enter password here..." />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Connect"/>
</LinearLayout>
